extends ./pug/layout/layout.pug

block vars
  -var page = 'services';
  -var title = 'Services';

block content
  section.main-services-header
    .container
      .content
        .text
          p.title Тарифы
        .btns
          button.btn-white.btn-back
            i.fa.fa-long-arrow-left(aria-hidden="true")
            span Вернуться к инструментам
      .btns
        button.btn-white Пакеты услуг
        button.btn-blue Конструктор
  section.services-types
    .container
      .service-content.js-service-content
        .service-item
          .content
            .line
            p.title Free
            p.desc Бесплатно навсегда
            p.month-price 0 #[span.rub ₽] #[span /месяц]
            ul.offers
              li Мультиссылка:
              li.inactive Модуль "Ссылка"
              li.inactive Модуль "Текст"
