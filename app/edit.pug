extends ./pug/layout/layout.pug

block vars
  -var page = 'review main-edit';
  -var title = 'Edit';

block content
  section.mobile-slider
    .slider-wrapper.js-slider-wrapper
      a(href="").item Создание мультиссылки
      a(href="").item.item_active Товары
      a(href="").item Прием платежей



  section.top-btns.edit-top-btns
    .container
      .content
        .title
          p.emp Мультиссылка
          span Конструктор мини-сайта
        .btns
          a(href="").btn-white.btn-desktop Просмотр
          a(href="").btn-white.btn-desktop Редактировать
          a(href="").btn-blue.btn-desktop Сохранить
          a(href="").btn-mobile 
            i.fa.fa-pencil(aria-hidden="true")
          a(href="").btn-mobile 
            i.fa.fa-eye(aria-hidden="true")
          a(href="").btn-mobile.btn-mobile_check
            img(src="./img/check.svg", alt="")

  .wrapper-for-bg
    section.main-review-header.main-edit-header
      .container
        .nav
          .edit-item
            span.icon-del
          .nav-links
            a(href="").nav-link.nav-link_50 Главная
            .nav-drop-link.nav-link_50
              .wrapper.js-drop-link-2
                span Товары
                img(src="./img/arrow-down.svg", alt="").arrow
              .drop-menu.js-drop-menu-2
                .drop-links
                  a(href="").nav-link Item
                  a(href="").nav-link Item
                  a(href="").nav-link Item
                  a(href="").nav-link Item

            a(href="").nav-link.nav-link_30 Отзывы
            a(href="").nav-link.nav-link_30 Фото
            a(href="").nav-link.nav-link_30 Контакты
          .edit-items-wrapper
            .edit-item.js-edit-menu-func
              span.icon-settings
            .edit-item
              span.icon-copy
        .main-edit-icon.edit-section
          .top-edit
            +editors('left')
            h2 Аватарка мини-сайта
            +editors('right', 'js-edit-avatar-func')
          .row.justify-content-center
            .col-xl-7
              .profile-icon
                .desc.desc_mobile
                  p.text Загрузите квадратное изображение выбрав его на компьютере или перетищите картинку в эту область
                img(src="./img/profile.jpg", alt="").profile-img
                .desc.desc_desktop
                  p.text.text_desktop Загрузите квадратное изображение выбрав его на компьютере или перетищите картинку в эту область
                  input#icon(type="file", name="")
                  label(for="icon") Загрузить


        +addBlock

        .text-block.edit-section
          .top-edit
            +editors('left')
            h2 Текстовый блок
            +editors('right', 'js-edit-text-func')
          p.text.
            Компания "Цветы Мира" занимается доставкой экзатических цветов и авторских букетов по всей Москве и Московской области. Мы можем привезти цветы в точно указанное время и предложим варианты оригинального поздравления или предложения руки и сердца

        +addBlock

    //- Contact us  adapted = true
    section.main-review-contact.main-edit-contact 
      .container
        .content.edit-section
          .top-edit
            +editors('left')
            h2 Мессенджеры
            +editors('right', 'js-edit-mess-func')
          .social-icons
            -var i = 1;
            while i < 8
              a(href="").social-link
                img(src=`./img/social-${i}.svg`, alt="")
              -i++

        +addBlock

        .separator-wrapper.edit-section
          .top-edit
            +editors('left')
            h2 Разделить
            +editors('right')
          .separator

        +addBlock
            
          
    //- Slider  adapted = true
    section.main-review-slider.main-edit-slider
      .container
        .content.edit-section
          .top-edit
            +editors('left')
            h2 Изображение
            +editors('right', 'js-edit-image-func')
          .row.justify-content-center
            .col-xl-6
              .slider.js-slider
                .slide
                  img(src="./img/slider.jpg", alt="")
                .slide
                  img(src="./img/slider.jpg", alt="")
                .slide
                  img(src="./img/slider.jpg", alt="")
                .slide
                  img(src="./img/slider.jpg", alt="")
                .slide
                  img(src="./img/slider.jpg", alt="")
              .controls
                .arrows
                  button.arrow.prev.js-prev-btn
                    img(src="./img/arrow-down.svg", alt="")
                  button.arrow.next.js-next-btn
                    img(src="./img/arrow-down.svg", alt="")

        +addBlock

    //- Video  adapted = true
    section.main-review-video.main-edit-video
      .container
        .content.edit-section
          .top-edit
            +editors('left')
            h2 Видео
            +editors('right', 'js-edit-video-func')
          .row.justify-content-center
            .col-xl-6
              .video.js-video
                .bg
                  img(src="./img/play.svg", alt="").play
                video(src="")

        +addBlock

    //- Pixel  adapted = true
    section.main-review-pixel.main-edit-pixel
      .container
        .content.edit-section
          .top-edit
            +editors('left')
            h2 Пиксель FB*
            +editors('right', 'js-edit-pixel-func')
          p.edit-text.edit-text_pixel #[span Счетчик id5163262] #[span установлен и работает]

        +addBlock


    //- Sell  adapted = true
