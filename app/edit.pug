              .price
                span.old 500₽
                span.new 500₽
              a(href="").btn-order Заказать
            .item
              img(src="./img/small-flower.jpg", alt="")
              p.title Доставка цветов опт
              .price
                span.old 500₽
                span.new 500₽
              a(href="").btn-order Заказать

        +addBlock

    //- Footer  adapted = 
    section.main-review-footer.main-edit-footer
      .container
        .content.edit-section
          .top-edit
            +editors('left')
            h2 Оплата
            +editors('right')
          p.edit-text Заказ цветов на дом
          .row.justify-content-center
            .col-xl-6
              form(action="").online-order
                input(type="text", name="")
                button Оплатить

        +addBlock


    //- Site  adapted = 
    section.main-edit-site
      .container
        .content.edit-section
          .top-edit
            +editors('left')
            h2 Ссылка
            +editors('right')
